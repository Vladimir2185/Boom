<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conlayout_baseDetail2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/imageButtonBack_detailInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle_corner"
        android:backgroundTint="@color/transparent"
        android:padding="16dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/car_ui_icon_arrow_back"
        app:tint="@color/black_low" />

    <TextView
        android:id="@+id/textTitleType"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:textColor="@color/black_low"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageButtonBack_detailInfo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageButtonBack_detailInfo"
        app:layout_constraintTop_toTopOf="@+id/imageButtonBack_detailInfo"
        tools:text="TextView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/conLayoutAttachTo_baseDetail2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/imageButtonBack_detailInfo">

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>